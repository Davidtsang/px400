<div class="work-item">
  <div id="work-<%= work.id %>" class="work-item-frame">

    <a class="work-item-image" href="<%= work_path(work) %>">
      <%= image_tag work.image.url(:small) %>
    </a>

    <% if  work.is_original %>
        <a class='my-tool-tip is_original pull-left' data-toggle="tooltip" data-placement="top" title="原创作品"> <i class="fa fa-pencil-square" ></i> </a>
    <% end %>
    <ul class="list-inline ">


      <li><i class="fa fa-thumbs-up"></i> <span class="info"><%= work.works_likes_count %></span></li>
      <li><i class="fa fa-commenting"></i> <span class="info"><%= work.comments_count %></span></li>

      <li><i class="fa fa-dot-circle-o"></i> <span class="info"><%= work.views_count %></span></li>
    </ul>
    <div class="work-item-frame-info">
      <a href="<%= work_path(work) %>" class="fill-div" >

      <h5 class="work-title"><%= truncate work.title , length: 50  %></h5>
      <span class="description"><%= truncate(work.desciption, length: 100) %></span><br>
<span class="timestamp">
<%= time_ago_in_words(work.created_at) %>前
</span>
      </a>
    </div>

  </div>
  <div class="user-info">
    <%= image_tag work.user.avatar.url(:mini), :class => 'avatar-mini' %>
    <span > <%= link_to work.user.name, "/designers/#{work.user_id}" %></span>
  </div>
</div>