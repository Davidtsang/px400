<%= form_for(@work) do |f| %>
    <% if @work.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@work.errors.count, "error") %> prohibited this work from being saved:</h2>

          <ul>
            <% @work.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="form-group">
      <%= f.label :title, "标题" %><br>
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :image, "图片" %> <em>(4:3比例最佳。不符合这个比例的图片将自动以中心为基准裁切成4:3比例，分辨率将自动转换为400*300px。最大尺寸不可超过8MB)</em><br>
      <%= f.file_field :image %>
    </div>

    <div class="form-group">
      <%= f.label :desciption, '描述' %> <em>(可省略)</em><br>
      <%= f.text_area :desciption, class: "form-control" %>
    </div>


    <div class="checkbox">
      <label></label>

      <%= f.check_box :is_original %>  原创作品
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
