<p id="notice"><%= notice %></p>

<h1>Listing Works</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Image</th>
      <th>Desciption</th>
      <th>User</th>
      <th>Views count</th>
      <th>Likes count</th>
      <th>Favorites count</th>
      <th>Shares count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @works.each do |work| %>
      <tr>
        <td><%= work.title %></td>
        <td><%= work.image %></td>
        <td><%= work.desciption %></td>
        <td><%= work.user_id %></td>
        <td><%= work.views_count %></td>
        <td><%= work.works_likes_count %></td>
        <td><%= work.favorites_count %></td>
        <td><%= work.shares_count %></td>
        <td><%= link_to 'Show', work %></td>
        <td><%= link_to 'Edit', edit_work_path(work) %></td>
        <td><%= link_to 'Destroy', work, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

