<div class="reply-form">
<%= form_for(Comment.new, remote: true, method: :post) do |f| %>
    <div class="form-group">

      <%= f.text_area :content, :class => "form-control", rows: 1 %>
      <%= f.hidden_field :work_id , value: @work_id %>
      <%= f.hidden_field :parent_id, value: @parent_id %>
    </div>
    <%= f.submit "回复", class: "btn btn-default pull-right" %>
<% end %></div>