<% provide(:title, "屏蔽列表 - 会员设置") %>
<div class="container-fix">
  <h2>会员设置</h2>
  <ul class="nav nav-tabs">

    <li role="presentation"><%= link_to '一般设置', profile_path %></li>
    <li role="presentation"><a href="<%= edit_user_registration_path %>">名字/Email/密码</a></li>
    <li><a href="<%= block_list_path %>">屏蔽列表</a></li>
    <li  class="active"><a href="<%= notice_settings_path %>">通知和邮件</a></li>
    <li><a href="<%= users_icodes_path(@user) %>">邀请码</a></li>
  </ul>

  <div class="row">
    <div class="col-md-7">
      <h4>邮件提醒</h4>

      <%= form_for(@user, url: update_profile_path, html: {method: :put, class: "form-horizontal"}) do |f| %>
          <%= devise_error_messages! %>

          <div class="form-group">
            <%= f.label :is_allow_notice_mail, "通知邮件", :class => "col-sm-2 control-label" %>

            <div class="col-sm-10">
              <div class="checkbox">
              <label>
              <%= f.check_box :is_allow_notice_mail %> 允许发送</label>

                </div>
              <em>(如有新的通知，我们每日将在一个固定的时间发送一封邮件提醒你)</em>

            </div>

          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button type="submit" class="btn btn-default">更新</button>
            </div>
          </div>
          <% end %>

    </div>
  </div>
</div>
