<% provide(:title, "注册账号") %>
<div class="container-fix">
  <div class="row">
    <div class="col-md-6 col-md-offset-3 ">
      <div class="title-logo">
        <a href="/">
        <%= image_tag 'logo-160pt.png', class: "logo" %></a>
        <p class="site-desc">中国设计师与艺术家的展示交流空间</p>
      </div>

      <h1 class="title">注册账号</h1>

      <div class="login-box">


        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>

            <div class="form-group">


              <%= f.label :name, "姓名", :class => "control-label" %>


              <%= f.text_field :name, :class => 'form-control' %>
              <em>（我们推荐你使用真实姓名，这将更利于增加你声望）</em>

            </div>

            <div class="form-group">

              <%= f.label :email, :class => "control-label" %>
              <%= f.email_field :email, autofocus: true, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :password, "密码", :class => "control-label" %>


              <% if @minimum_password_length %>
                  <% minimum_password_str ="最少#{@minimum_password_length}个字符长度" %>
              <% end %>

              <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: minimum_password_str %>

            </div>

            <div class="form-group">

              <%= f.label :password_confirmation, "确认密码", :class => "control-label" %>
              <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>

            </div>
            <div class="form-group">

              <%= f.label :icode, "邀请码", :class => "control-label" %>
              <%= f.text_field :icode, value: resource.icode ||= @icode, class: "form-control" %>
              <em>（本站采用邀请注册，请输入你的邀请码。 <a href="<%= about_icode_path %>">如何获得邀请码？</a>）</em>

            </div>

            <button type="submit" class="btn btn-primary btn-lg">提交</button>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>