<% provide(:title, @user.name) %>
<div class="row">
  <div class="col-md-12">
    <div class="user-header">
      <%= render 'shared/stats' %>
      <% if user_signed_in? %>
          <%= render 'follow_form', user: @user %>

          <a class="btn btn-default" href="<%= new_message_path(to_user_id: @user.id) %>">私信</a>
      <% end %>
    </div>

  </div>
</div>

<div class="row">

  <div class="col-md-6 col-md-offset-4 user_info">
    <ul>
      <li><%= image_tag @user.avatar.url(:normal), class: "avatar" %></li>
      <li> <%= @user.name %></li>
      <li><%= @user.location %> </li>
    </ul>
  </div>

</div>


<div class="row">
  <%= render 'shared/feed' %>

</div>

