<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= image_tag @user.avatar.url(:normal) %>
        <%= @user.name %>
      </h1>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>

  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if user_signed_in? %>

    <% if @user.works.any? %>
        <h3>Works (<%= @user.works.count %>)</h3>
        <ol class="works">
          <%= render @works %>
        </ol>
        <%= will_paginate @works %>
    <% end %>
  </div>
</div>