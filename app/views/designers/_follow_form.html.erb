<% unless current_user?(user) %>
    <div id="follow_form_<%= user.id  %>" class="follow-form">
      <% if current_user.following?(user) %>
          <%= render 'designers/unfollow', user: user  %>
      <% else %>
          <%= render 'designers/follow', user: user %>
      <% end %>
    </div>
<% end %>