<h1>批量生成邀请码</h1>
<%= form_tag(batch_create_icodes_path, method: "post") do %>
    <div class="form-group">
    <label>生成数量：</label><br>
    <%= number_field_tag "gen_number" %>
    </div>

    <div class="form-group">

    <label>User ID：</label><br>
    <%= number_field_tag "user_id" %>
    </div>
<button type="submit">立即生成</button>
<% end %>
